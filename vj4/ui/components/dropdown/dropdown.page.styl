@import '~misc/section.inc.styl'

.drop-element,
.drop-element:after,
.drop-element:before,
.drop-element *,
.drop-element *:after,
.drop-element *:before
  box-sizing: border-box

.drop-element
  position: absolute
  display: none
  opacity: 0
  transition: opacity .1s ease-in-out
  z-index: 1000

  &.drop-open
    display: block

  &.drop-open-transitionend
    display: block

  &.drop-after-open
    opacity: 1

.dropdown-target
  display: none
  font-size: 0.8rem

  &.menu
    min-width: rem(150px)
    box-shadow: 0 2px 7px rgba(#000, 0.3)
    background: #FFF
    font-size: 0.8rem

  .menu__link
    padding: rem(0 10px)
    line-height: 2.5em

.drop .dropdown-target
  display: block
