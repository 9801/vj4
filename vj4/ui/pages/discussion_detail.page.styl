.page--discussion_detail

  .topic__content
    margin: 20px 0

  .topic__footer
    font-size: 0.8rem
    padding: rem(15px 0)
    margin-top: rem(20px)
    color: #AAA
    border-top: 1px solid $bg-color

    a, a:active, a:visited
      color: #AAA

    a:hover
      color: $primary-color

  .profile__bg
    background-size: cover
    background-position: center center
    height: rem(60px)
    margin-bottom: rem(-26px)

  .sidebar-user-profile
    .media__body
      padding-left: rem(10px)
      padding-top: rem(20px)

    .user-profile-name
      font-size: 1.2rem
      color: #444

  .sidebar-user-stat
    margin-top: rem(20px)