.page--record_main
  .col--status
    width: 180px
    position: relative
    border-left: 3px solid transparent
    for key, value in $record-status-color
      &.{key}
        border-left: 3px solid lighten(value, 10%)

  .col--submit-at
    width: 160px
    text-align: center

  .col--submit-by
    width: 120px
    text-align: right

  .col--status, .col--submit-by
    border-right: 1px solid $table-border-color

  .col--status__text
    position: relative
    z-index: 2

  .col--status__progress-container
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    z-index: 1

  .col--status__progress
    position: absolute
    left: 0
    top: 0
    height: 100%
    background: #fff6d1
